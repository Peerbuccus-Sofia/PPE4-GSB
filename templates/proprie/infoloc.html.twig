                                        <div class="col-md-6"><label>Prénom</label></div>
                                        <div class="col-md-6"><p>{{ locataire.prenom }}</p></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6"><label>Téléphone</label></div>
                                        <div class="col-md-6"><p>{{ locataire.tel }}</p></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6"><label>Date de naissance</label></div>
                                        <div class="col-md-6"><p>{{ locataire.datenaissance | date('d/m/Y')}}</p></div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-md-6"><label>RIB</label></div>
                                        <div class="col-md-6"><p>**********</p></div>
                                    </div>
                        </div>
                    </div>
                  
                </div>
            </div>         
